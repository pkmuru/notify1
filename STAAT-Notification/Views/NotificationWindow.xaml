<Window x:Class="STAAT_Notification.Views.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:STAAT_Notification.Controls"
        mc:Ignorable="d"
        Title="Notifications" 
        Height="500" Width="400"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True"
        Loaded="Window_Loaded">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- Deletion Animation Storyboard -->
        <Storyboard x:Key="DeleteNotificationStoryboard">
            <!-- Fade out -->
            <DoubleAnimation 
                Storyboard.TargetProperty="Opacity"
                To="0" 
                Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            
            <!-- Slide right -->
            <DoubleAnimation 
                Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(TranslateTransform.X)"
                To="50" 
                Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </Window.Resources>

    <Window.RenderTransform>
        <TranslateTransform x:Name="WindowTransform"/>
    </Window.RenderTransform>
    
    <Border Background="{StaticResource NotificationBackground}"
            BorderBrush="{StaticResource NotificationBorder}"
            BorderThickness="0"
            CornerRadius="12">
        <Border.Effect>
            <DropShadowEffect BlurRadius="32" 
                              ShadowDepth="8" 
                              Color="#20000000" 
                              Opacity="0.15"/>
        </Border.Effect>
        
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="{StaticResource HeaderBackground}"
                    CornerRadius="8,8,0,0"
                    Margin="-16,-16,-16,0"
                    Padding="16,16,16,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0"
                               Text="Notifications" 
                               FontFamily="Segoe UI" 
                               FontSize="20" 
                               FontWeight="SemiBold"
                               Foreground="{StaticResource PrimaryText}"/>
                    
                    <ToggleButton Grid.Column="1" 
                                  Name="SettingsToggle"
                                  Style="{StaticResource SettingsIconButtonStyle}"
                                  Margin="0,0,8,0"
                                  Click="SettingsToggle_Click"/>
                    
                    <Button Grid.Column="2" 
                            Content="Clear all" 
                            Style="{StaticResource ClearAllButtonStyle}"
                            Click="ClearAll_Click"/>
                </Grid>
            </Border>
            
            <!-- Settings Dropdown -->
            <Popup Name="SettingsPopup" 
                   Grid.Row="0"
                   PlacementTarget="{Binding ElementName=SettingsToggle}"
                   Placement="Bottom"
                   StaysOpen="False"
                   AllowsTransparency="True">
                <local:SettingsDropdown x:Name="SettingsDropdownControl"
                                        xmlns:local="clr-namespace:STAAT_Notification.Controls"/>
            </Popup>

            <!-- Notifications List -->
            <ScrollViewer Grid.Row="1" 
                          Style="{StaticResource Windows11ScrollViewer}"
                          Name="NotificationsScrollViewer">
                <ItemsControl Name="NotificationsItemsControl" 
                              ItemsSource="{Binding Notifications}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <controls:NotificationItem 
                                NotificationId="{Binding Id}"
                                AppName="{Binding AppName}"
                                Title="{Binding Title}"
                                Message="{Binding Message}"
                                Icon="{Binding Icon}"
                                TimestampDisplay="{Binding TimestampDisplay}"
                                ActionText="{Binding Action}"
                                ActionUrl="{Binding ActionUrl}"
                                HasAction="{Binding HasAction}"
                                NotificationData="{Binding}"
                                CloseRequested="NotificationItem_CloseRequested"
                                ActionClicked="NotificationItem_ActionClicked"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Empty State -->
            <TextBlock Grid.Row="1" 
                       Text="No new notifications" 
                       FontFamily="Segoe UI" 
                       FontSize="14" 
                       Foreground="{StaticResource SecondaryText}"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       Visibility="{Binding NoNotificationsVisibility}"/>
        </Grid>
    </Border>
</Window>