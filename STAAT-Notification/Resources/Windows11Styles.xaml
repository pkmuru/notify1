<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Windows 11 Colors with Theme Support -->
    <SolidColorBrush x:Key="NotificationBackground" Color="#F3F3F3"/>
    <SolidColorBrush x:Key="NotificationItemBackground" Color="Transparent"/>
    <SolidColorBrush x:Key="NotificationItemHover" Color="#08000000"/>
    <SolidColorBrush x:Key="NotificationItemPressed" Color="#10000000"/>
    <SolidColorBrush x:Key="HeaderBackground" Color="Transparent"/>
    <SolidColorBrush x:Key="PrimaryText" Color="#212121"/>
    <SolidColorBrush x:Key="SecondaryText" Color="#5E5E5E"/>
    <SolidColorBrush x:Key="TertiaryText" Color="#8B8B8B"/>
    <SolidColorBrush x:Key="AccentColor" Color="#0078D4"/>
    <SolidColorBrush x:Key="AccentHover" Color="#106EBE"/>
    <SolidColorBrush x:Key="AccentPressed" Color="#005A9E"/>
    <SolidColorBrush x:Key="ScrollBarThumb" Color="#60000000"/>
    <SolidColorBrush x:Key="ScrollBarThumbHover" Color="#90000000"/>
    <SolidColorBrush x:Key="ScrollBarThumbPressed" Color="#A0000000"/>
    <SolidColorBrush x:Key="DividerColor" Color="#E4E4E4"/>
    <SolidColorBrush x:Key="SettingsDropdownBg" Color="#FBFBFB"/>
    <SolidColorBrush x:Key="SettingsDropdownBorder" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="NotificationBorder" Color="#E0E0E0"/>
    
    <!-- Typography -->
    <FontFamily x:Key="SegoeUI">Segoe UI</FontFamily>
    <FontFamily x:Key="SegoeFluent">Segoe Fluent Icons</FontFamily>

    <!-- Windows 11 Thin ScrollBar Thumb -->
    <Style x:Key="ScrollBarThumbStyle" TargetType="Thumb">
        <Setter Property="Background" Value="{StaticResource ScrollBarThumb}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Thumb">
                    <Border x:Name="ThumbBorder"
                            Background="{TemplateBinding Background}"
                            CornerRadius="1"
                            Width="2"/>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ThumbBorder" Property="Background" Value="{StaticResource ScrollBarThumbHover}"/>
                            <Setter TargetName="ThumbBorder" Property="Width" Value="4"/>
                        </Trigger>
                        <Trigger Property="IsDragging" Value="True">
                            <Setter TargetName="ThumbBorder" Property="Background" Value="{StaticResource ScrollBarThumbPressed}"/>
                            <Setter TargetName="ThumbBorder" Property="Width" Value="4"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Windows 11 ScrollBar -->
    <Style x:Key="Windows11ScrollBar" TargetType="ScrollBar">
        <Setter Property="Width" Value="6"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Margin" Value="0,0,0,0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ScrollBar">
                    <Grid Background="{TemplateBinding Background}">
                        <Track Name="PART_Track" IsDirectionReversed="True">
                            <Track.Thumb>
                                <Thumb Style="{StaticResource ScrollBarThumbStyle}">
                                    <Thumb.Margin>
                                        <Thickness>1.5,4,1.5,4</Thickness>
                                    </Thumb.Margin>
                                </Thumb>
                            </Track.Thumb>
                        </Track>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Windows 11 ScrollViewer -->
    <Style x:Key="Windows11ScrollViewer" TargetType="ScrollViewer">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ScrollViewer">
                    <Grid>
                        <!-- Content takes full width -->
                        <ScrollContentPresenter Margin="{TemplateBinding Padding}"
                                                Content="{TemplateBinding Content}"
                                                CanContentScroll="False"/>
                        <!-- Scrollbar overlays on top -->
                        <ScrollBar Name="PART_VerticalScrollBar"
                                   HorizontalAlignment="Right"
                                   Style="{StaticResource Windows11ScrollBar}"
                                   Value="{TemplateBinding VerticalOffset}"
                                   Maximum="{TemplateBinding ScrollableHeight}"
                                   ViewportSize="{TemplateBinding ViewportHeight}"
                                   Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"
                                   Margin="0,8,2,8"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Notification Header Text -->
    <Style x:Key="NotificationHeaderText" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource SegoeUI}"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
    </Style>

    <!-- Clear All Button -->
    <Style x:Key="ClearAllButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Foreground" Value="{StaticResource AccentColor}"/>
        <Setter Property="FontFamily" Value="{StaticResource SegoeUI}"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            Padding="4,2">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Foreground" Value="{StaticResource AccentHover}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Foreground" Value="{StaticResource AccentPressed}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

